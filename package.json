{
  "name": "composer_controller",
  "version": "1.0.7",
  "description": "A controller made by composer for composers",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "release": "build",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:alearcy/composer_controller.git"
  },
  "keywords": [],
  "author": "Alessandro Arcidiaco",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-updater": "^4.0.6",
    "express": "^4.16.4",
    "lowdb": "^1.0.0",
    "osc-js": "^2.0.3",
    "socket.io": "^2.2.0",
    "webmidi": "^2.3.3",
    "ws": "^6.2.1"
  },
  "build": {
    "appId": "com.alessandroarcidiaco.${name}",
    "productName": "Composer Controller",
    "directories": {
      "buildResources": "public",
      "app": "."
    },
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "category": "Audio"
    },
    "win": {
      "icon": "public/icon.ico"
    },
    "publish": [
      "github"
    ]
  }
}
