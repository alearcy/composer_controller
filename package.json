{
  "name": "composer_controller",
  "version": "1.1.3",
  "description": "MIDI controller by composer for composers",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-react": "cd app && npm run start",
    "dist": "cd app && npm run build && cd .. && electron-builder --publish never",
    "release": "cd app && npm run build && cd .. && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:alearcy/composer_controller.git"
  },
  "keywords": [
    "MIDI",
    "controller",
    "remote controller",
    "composer",
    "daw",
    "keyswitch"
  ],
  "author": "Alessandro Arcidiaco",
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.0.2",
    "electron-builder": "^24.13.3",
    "node-sass": "^9.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-updater": "^6.1.8",
    "express": "^4.19.2",
    "lowdb": "^7.0.1",
    "socket.io": "^4.7.5",
    "webmidi": "^3.1.9",
    "ws": "^8.17.0"
  },
  "build": {
    "appId": "com.alessandroarcidiaco.${name}",
    "productName": "Composer Controller",
    "directories": {
      "buildResources": "public",
      "app": "."
    },
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "public/icon.ico"
    },
    "publish": [
      "github"
    ]
  }
}
